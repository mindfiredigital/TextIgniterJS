{
  "private": true,
  "name": "textigniter-pkg",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.12",
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jsdom": "^21.1.7",
    "@typescript-eslint/parser": "^8.12.1",
    "cypress": "^15.3.0",
    "eslint": "^9.10.0",
    "globals": "^15.9.0",
    "husky": "^9.1.5",
    "jsdom": "^27.0.0",
    "ncp": "^2.0.0",
    "pnpm": "^8.0.0",
    "prettier": "^3.3.3",
    "rollup": "^4.21.2",
    "tsc-alias": "^1.8.10",
    "tslib": "^2.8.1",
    "turbo": "^1.10.0",
    "typescript": "^5.6.2",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "prettier --write",
      "eslint ."
    ],
    "**/*.json": [
      "prettier --write"
    ],
    "**/*.md": [
      "prettier --write"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "start": "lite-server",
    "watch": "turbo run build --filter=. --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "turbo run lint",
    "copy-assets": "npm run copy-icons && npm run copy-styles",
    "copy-icons": "ncp ./src/icons ./dist/icons",
    "copy-styles": "ncp ./src/styles ./dist/styles",
    "prepare": "npx husky install",
    "release": "turbo run build && pnpm publish --access public",
    "changeset:autogenerate": "node .github/changeset-autogenerate.mjs",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:run:web-component": "cypress run --spec 'cypress/e2e/packages/web-component/**/*'",
    "cypress:run:angular": "cypress run --spec 'cypress/e2e/packages/angular/**/*'",
    "cypress:run:react": "cypress run --spec 'cypress/e2e/packages/react/**/*'",
    "cypress:run:core": "cypress run --spec 'cypress/e2e/packages/core/**/*'",
    "dev:web-component": "pnpm --filter @mindfiredigital/textigniter-web-component start",
    "dev:react": "pnpm --filter react dev",
    "serve:packages": "cd packages && python3 -m http.server 5173 || npx serve -l 5173"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "packageManager": "pnpm@8.6.0"
}
