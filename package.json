{
  "private": true,
  "name": "textigniter-monorepo",
  "workspaces": [
    "packages/core",
    "packages/web-component"
  ],
  "devDependencies": {
    "typescript": "^5.6.2",
    "rollup": "^4.21.2",
    "pnpm": "^8.0.0",
    "husky": "^9.1.5",
    "turbo": "^1.10.0",
    "tsc-alias": "^1.8.10",
    "tslib": "^2.8.1",
    "eslint": "^9.10.0",
    "prettier": "^3.3.3",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.12",
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@typescript-eslint/parser": "^8.12.1",
    "globals": "^15.9.0",
    "ncp": "^2.0.0"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "prettier --write",
      "eslint ."
    ],
    "**/*.json": [
      "prettier --write"
    ],
    "**/*.md": [
      "prettier --write"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "start": "lite-server",
    "watch": "turbo run build --filter=. --watch",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "copy-assets": "npm run copy-icons && npm run copy-styles",
    "copy-icons": "ncp ./src/icons ./dist/icons",
    "copy-styles": "ncp ./src/styles ./dist/styles",
    "prepare": "npx husky install",
    "release": "turbo run build && pnpm publish --access public",
    "changeset:autogenerate": "node .github/changeset-autogenerate.mjs"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "packageManager": "pnpm@8.6.0"
}
