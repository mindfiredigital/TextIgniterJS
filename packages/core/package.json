{
  "name": "@mindfiredigital/textigniter",
  "version": "1.0.0",
  "description": "TextIgniter JS is a lightweight, powerful, and intuitive HTML editor built using TypeScript.",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && rollup -c --no-dts && pnpm run copy",
    "copy-styles": "ncp ./src/styles ./dist/styles",
    "copy": "npm run copy-styles",
    "dev": "rollup -c -w",
    "check": "rollup -c --verbose"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "keywords": [
    "rich-text-editor",
    "html-editor",
    "typescript",
    "npm-package"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/minimatch": "^6.0.0",
    "@types/node": "^22.5.4",
    "ncp": "^2.0.0",
    "rollup": "^4.21.2",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-postcss": "^4.0.2",
    "tslib": "^2.7.0",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "release": {
    "repositoryUrl": "https://github.com/mindfiredigital/TextIgniterJS.git",
    "branches": [
      "main",
      "next",
      {
        "name": "beta",
        "prerelease": true
      }
    ]
  }
}
