{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": ["dom", "es6", "es2015", "es2016", "es2017"],
    "declaration": true,
    "stripInternal": true,
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
    // "composite": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
